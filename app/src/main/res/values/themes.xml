<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlogFrog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@color/accent_green</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PostList" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@color/accent_green</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlNormal">@color/accent_green</item>
        <item name="android:textColorSecondary">@color/accent_green</item>
        <!-- Customize your theme here. -->
    </style>
